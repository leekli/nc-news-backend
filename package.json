{
  "name": "be-nc-news",
  "version": "1.5",
  "description": "Lee's NC News Back End Project",
  "main": "listen.js",
  "scripts": {
    "setup-dbs": "psql -f ./db/setup.sql",
    "seed": "node ./db/seeds/run-seed.js",
    "test": "jest",
    "output-dev": "psql -f view-dev-db.sql > view-dev-db.txt",
    "output-test": "psql -f view-test-db.sql > view-test-db.txt",
    "seed-prod": "NODE_ENV=production npm run seed",
    "start": "node listen.js",
    "lint": "eslint --fix .",
    "prepare": "husky install",
    "precommit": "npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leekli/nc-news-backend.git"
  },
  "keywords": [],
  "author": "Lee Kirkham",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leekli/nc-news-backendissues"
  },
  "homepage": "https://github.com/leekli/nc-news-backend#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^14.3.2",
    "express": "^4.17.2",
    "nodemon": "^2.0.22",
    "pg": "^8.7.1",
    "pg-format": "^1.0.4"
  },
  "devDependencies": {
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "jest": "^27.5.1",
    "jest-sorted": "^1.0.14",
    "supertest": "^6.3.3"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-sorted"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  }
}
